<?xml version="1.0"?>
<ruleset name="Pressbooks">
  <description>Pressbooks Coding Standards</description>

	<!-- Exclude vendor -->
	<exclude-pattern>vendor/</exclude-pattern>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2"/>
</ruleset>
